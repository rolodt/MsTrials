@using MsTrials.Web.Resources
@model System.Collections.Generic.IList<MsTrials.Web.Models.Autor>

@{
    ViewBag.Title = "Autores";
    Layout = "../../Shared/_Admin.cshtml";
}

<script type="text/javascript">
    $(function () {
        var lang = (@Html.Raw(Json.Encode(System.Threading.Thread.CurrentThread.CurrentCulture.Name)) == "es-ES" ? "Spanish" : "English");
        $("#autores").dataTable(
        {
            "oLanguage": {
                "sUrl": "http://cdn.datatables.net/plug-ins/1.10.6/i18n/" + lang + ".json"
            }
        });
    });
</script>


<div class="">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Resources.Authors</h3>
                </div><!-- /.box-header -->
                <div style="padding:7px; padding-left:12px; color:Blue; text-decoration:underline;">
                    <a href="@Url.Action("add", "admin/autor")">@Resources.New</a>
                </div>
                <div class="box-body">
                    <table id="autores" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Resources.Name</th>
                                <th>@Resources.Email</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model)
                            {
                                <tr>
                                    <td>@(result.Nombre.IsEmpty() ? result.Apellido : result.Apellido + ", " + result.Nombre.Substring(0, 1))</td>
                                    <td>@result.Email</td>
                                    <td style="padding:7px; color:Blue; text-decoration:underline;">
                                        @Html.ActionLink(@Resources.Edit, "edit", new { id = result.AutorId })
                                    </td>
                                    <td style="padding:7px; color:Blue; text-decoration:underline;">
                                        @Html.ActionLink(@Resources.Delete, "delete", new { id = result.AutorId }, new { onclick = "return confirm('" + @Resources.AreYouSure + "');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Resources.Name</th>
                                <th>@Resources.Email</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div>   